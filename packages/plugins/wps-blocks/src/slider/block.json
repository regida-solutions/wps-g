{
	"apiVersion": 2,
	"name": "wps/slider",
	"title": "Slider block",
	"description": "A versatile slider that can run any content built with inner blocks",
	"category": "common",
	"icon": "slides",
	"supports": {
		"anchor": true,
		"html": false,
		"align": ["full", "wide"]
	},
	"keywords": ["Slider", "Slides"],
	"attributes": {
		"align": {
			"type": "string"
		},
		"textAlign": {
			"type": "string"
		},
		"verticalAlign": {
			"type": "string"
		},
		"speed": {
			"type": "number",
			"default": 500
		},
		"delay": {
			"type": "number",
			"default": 3000
		},

		"animationType": {
			"type": "string"
		},
		"loopSlides": {
			"type": "boolean"
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"pagination": {
			"type": "boolean"
		},
		"marginTop": {
			"type": "string"
		},
		"marginBottom": {
			"type": "string"
		}
	},
	"style": "file:../../build/slider/style.css",
	"editorStyle": "file:../../build/slider/editor.css",
	"script": "file:../../build/slider/frontend.js",
	"editorScript": "file:../../build/slider/index.js"
}
